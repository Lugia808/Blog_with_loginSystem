<hr>
<h1 class="text-center">Postagens Recentes</h1>

<!-- Seção de criação de postagem -->
<div class="container mt-4">
    <div class="row">
        <div class="col-md-12 mb-4">
            <div class="card">
                <div class="card-body">
                    <a href="/postagem/add" class="btn btn-primary w-100"><h5 class="card-title text-center">Criar uma nova postagem</h5></a>
                    
                </div>
            </div>
        </div>

        {{#each result}}
        <div class="col-md-6 mb-4">
            <div class="card">
                <div class="card-body">
                    <h5 class="card-title">Título: {{dataValues.titulo}}</h5>
                    <p class="card-text">Postado por: {{dataValues.username}}</p>
                    <small class="text-muted">Postado em: 3 dias atrás</small>
                </div>
                <div class="card-footer bg-success">
                    <p class="text-white">{{dataValues.conteudo}}</p>
                </div>
            </div>
        </div>
        {{/each}}
    </div>
</div>

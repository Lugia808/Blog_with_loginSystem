        <div class="container mt-4">
            <div class="d-flex justify-content-center">
                <div class="col-md-8">
                    <h1>Fazer uma Postagem</h1>
                    <form method="post" action="/postagem/add">
                        <div class="mb-3">
                            <label for="titulo" class="form-label">Título da Postagem</label>
                            <input type="text" class="form-control" id="titulo" name="titulo" required>
                        </div>
                        <div class="mb-3">
                            <label for="conteudo" class="form-label">Conteúdo da Postagem</label>
                            <textarea class="form-control" id="conteudo" name="conteudo" rows="6" required></textarea>
                        </div>
                        <button type="submit" class="btn btn-primary">Publicar</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
